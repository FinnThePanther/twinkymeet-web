---
import AdminNav from '../components/AdminNav.astro';
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Admin - TwinkyMeet' } = Astro.props;

export const prerender = false;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-100">
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar Navigation -->
      <div class="hidden md:flex md:flex-shrink-0">
        <div class="flex w-64 flex-col">
          <AdminNav />
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex flex-1 flex-col overflow-hidden">
        <!-- Top Bar -->
        <header class="z-10 bg-white shadow-sm">
          <div
            class="flex items-center justify-between px-4 py-4 sm:px-6 lg:px-8"
          >
            <h1 class="text-2xl font-semibold text-gray-900">{title}</h1>
            <div class="flex items-center space-x-4">
              <a href="/" class="text-sm text-gray-600 hover:text-gray-900"
                >View Site</a
              >
              <button
                id="logout-button"
                class="cursor-pointer text-sm text-red-600 hover:text-red-700"
              >
                Logout
              </button>
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto bg-gray-100 p-4 sm:p-6 lg:p-8">
          <slot />
        </main>
      </div>
    </div>

    <script>
      // Handle logout button click
      const logoutButton = document.getElementById('logout-button');
      logoutButton?.addEventListener('click', async () => {
        try {
          const response = await fetch('/api/admin/logout', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
          });

          // Redirect to login page regardless of response status
          window.location.href = '/admin/login';
        } catch (error) {
          console.error('Error during logout:', error);
          // Redirect anyway
          window.location.href = '/admin/login';
        }
      });
    </script>
  </body>
</html>
