---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AnnouncementBanner from '../components/AnnouncementBanner.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'TwinkyMeet - Summer Mini-Convention',
  description = 'A summer mini-convention for a close-knit furry community gathering',
} = Astro.props;

// Import hero images for preloading
let homeHeroImage, aboutHeroImage, scheduleHeroImage, activitiesHeroImage;

try {
  homeHeroImage = await import('../images/featured-2.jpg');
} catch {}

try {
  aboutHeroImage = await import('../images/home-hero.jpg');
} catch {}

try {
  scheduleHeroImage = await import('../images/featured-3.jpg');
} catch {}

try {
  activitiesHeroImage = await import('../images/community-social.jpg');
} catch {}

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredoka:wght@500;600;700&family=Nunito:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Preload current page's hero image for faster rendering -->
    {currentPath === '/' && homeHeroImage && (
      <link
        rel="preload"
        as="image"
        href={homeHeroImage.default.src}
        fetchpriority="high"
      />
    )}

    {currentPath === '/about' && aboutHeroImage && (
      <link
        rel="preload"
        as="image"
        href={aboutHeroImage.default.src}
        fetchpriority="high"
      />
    )}

    {currentPath === '/schedule' && scheduleHeroImage && (
      <link
        rel="preload"
        as="image"
        href={scheduleHeroImage.default.src}
        fetchpriority="high"
      />
    )}

    {currentPath === '/activities' && activitiesHeroImage && (
      <link
        rel="preload"
        as="image"
        href={activitiesHeroImage.default.src}
        fetchpriority="high"
      />
    )}

    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col bg-gray-50">
    <Header />
    <AnnouncementBanner />
    <main class="relative z-10 flex-1">
      <slot />
    </main>
    <div class="relative z-10">
      <Footer />
    </div>
  </body>
</html>
