---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSetting } from '../lib/db';

// Check if RSVPs are open
const rsvpOpen = getSetting('rsvp_open') === 'true';
---

<BaseLayout
  title="RSVP - TwinkyMeet"
  description="Reserve your spot at TwinkyMeet"
>
  <div class="min-h-screen bg-gray-50 px-4 py-12 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl">
      {
        !rsvpOpen ? (
          <div class="rounded-lg bg-white p-8 text-center shadow-lg">
            <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-yellow-100">
              <svg
                class="h-8 w-8 text-yellow-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                />
              </svg>
            </div>

            <h1 class="mb-4 text-3xl font-bold text-gray-900">
              RSVPs are Currently Closed
            </h1>
            <p class="mb-6 text-gray-600">
              RSVP registration is not currently open. Check back soon or
              contact us for more information!
            </p>

            <div class="space-y-3">
              <a
                href="/"
                class="block w-full rounded-lg bg-indigo-600 px-6 py-3 font-medium text-white transition-colors hover:bg-indigo-700"
              >
                Return Home
              </a>
              <a
                href="/about"
                class="block w-full rounded-lg border-2 border-indigo-600 bg-white px-6 py-3 font-medium text-indigo-600 transition-colors hover:bg-indigo-50"
              >
                Learn More About the Event
              </a>
            </div>

            <p class="mt-6 text-sm text-gray-500">
              Questions? DM Finn the Panther on Telegram
            </p>
          </div>
        ) : (
          <div class="rounded-lg bg-white p-8 shadow-lg">
            <div class="mb-8 text-center">
              <h1 class="mb-2 text-3xl font-bold text-gray-900">
                RSVP for TwinkyMeet
              </h1>
              <p class="text-gray-600">
                Reserve your spot at our summer gathering
              </p>
            </div>

            {/* Success Message (hidden by default) */}
            <div
              id="success-message"
              class="mb-6 hidden rounded-lg border border-green-200 bg-green-50 p-6"
            >
              <div class="flex items-start">
                <svg
                  class="mr-3 h-6 w-6 flex-shrink-0 text-green-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <div>
                  <h3 class="mb-1 font-semibold text-green-900">
                    Registration Confirmed!
                  </h3>
                  <p class="mb-3 text-sm text-green-800">
                    Thank you for registering for TwinkyMeet! We're excited to
                    see you there.
                  </p>
                  <div class="mb-3 rounded border border-green-200 bg-white p-3">
                    <p class="mb-1 text-sm font-medium text-gray-700">
                      Next Step:
                    </p>
                    <p class="text-sm text-gray-600">
                      Complete your payment via PayPal:
                      <a
                        href="https://paypal.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-indigo-600 underline hover:text-indigo-700"
                      >
                        Make Payment
                      </a>
                    </p>
                  </div>
                  <div class="flex gap-3">
                    <a
                      href="/schedule"
                      class="text-sm text-green-700 underline hover:text-green-800"
                    >
                      View Schedule
                    </a>
                    <a
                      href="/"
                      class="text-sm text-green-700 underline hover:text-green-800"
                    >
                      Return Home
                    </a>
                  </div>
                </div>
              </div>
            </div>

            {/* Error Message (hidden by default) */}
            <div
              id="error-message"
              class="mb-6 hidden rounded-lg border border-red-200 bg-red-50 p-4"
            >
              <div class="flex items-start">
                <svg
                  class="mt-0.5 mr-2 h-5 w-5 flex-shrink-0 text-red-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <div>
                  <h3 class="mb-1 font-semibold text-red-900" id="error-title">
                    Error
                  </h3>
                  <p class="text-sm text-red-800" id="error-text" />
                </div>
              </div>
            </div>

            {/* Form */}
            <form id="rsvp-form" class="space-y-6">
              {/* Name */}
              <div>
                <label
                  for="name"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Name <span class="text-red-600">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  maxlength="255"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="Your full name"
                />
              </div>

              {/* Email */}
              <div>
                <label
                  for="email"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Email <span class="text-red-600">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  maxlength="255"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="your.email@example.com"
                />
              </div>

              {/* Dietary Restrictions */}
              <div>
                <label
                  for="dietary_restrictions"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Dietary Restrictions or Allergies
                </label>
                <textarea
                  id="dietary_restrictions"
                  name="dietary_restrictions"
                  rows="3"
                  maxlength="500"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="Please let us know about any dietary needs..."
                />
                <p class="mt-1 text-xs text-gray-500">
                  We'll do our best to accommodate your needs
                </p>
              </div>

              {/* Plus One */}
              <div class="flex items-center">
                <input
                  type="checkbox"
                  id="plus_one"
                  name="plus_one"
                  class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
                />
                <label for="plus_one" class="ml-2 text-sm text-gray-700">
                  I'm bringing a +1 guest
                </label>
              </div>

              {/* Arrival Time */}
              <div>
                <label
                  for="arrival_time"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Expected Arrival Time
                </label>
                <input
                  type="datetime-local"
                  id="arrival_time"
                  name="arrival_time"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                />
              </div>

              {/* Departure Time */}
              <div>
                <label
                  for="departure_time"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Expected Departure Time
                </label>
                <input
                  type="datetime-local"
                  id="departure_time"
                  name="departure_time"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                />
              </div>

              {/* Excited About */}
              <div>
                <label
                  for="excited_about"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  What are you most excited about?
                </label>
                <textarea
                  id="excited_about"
                  name="excited_about"
                  rows="3"
                  maxlength="500"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="Tell us what you're looking forward to..."
                />
              </div>

              {/* Submit Button */}
              <div>
                <button
                  type="submit"
                  id="submit-button"
                  class="w-full rounded-lg bg-indigo-600 px-6 py-3 font-semibold text-white transition-colors hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-none disabled:cursor-not-allowed disabled:bg-gray-400"
                >
                  Submit RSVP
                </button>
                <p class="mt-2 text-center text-xs text-gray-500">
                  <span class="text-red-600">*</span> Required fields
                </p>
              </div>
            </form>
          </div>
        )
      }
    </div>
  </div>

  <script>
    const form = document.getElementById('rsvp-form') as HTMLFormElement;
    const submitButton = document.getElementById(
      'submit-button'
    ) as HTMLButtonElement;
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');
    const errorTitle = document.getElementById('error-title');
    const errorText = document.getElementById('error-text');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Disable button and show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Submitting...';

      // Hide previous messages
      successMessage?.classList.add('hidden');
      errorMessage?.classList.add('hidden');

      // Collect form data
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        dietary_restrictions: formData.get('dietary_restrictions'),
        plus_one: formData.get('plus_one') === 'on',
        arrival_time: formData.get('arrival_time'),
        departure_time: formData.get('departure_time'),
        excited_about: formData.get('excited_about'),
      };

      try {
        const response = await fetch('/api/rsvp', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        const result = await response.json();

        if (response.ok) {
          // Success
          successMessage?.classList.remove('hidden');
          form.style.display = 'none';
          window.scrollTo({ top: 0, behavior: 'smooth' });
        } else {
          // Error
          if (errorTitle && errorText) {
            if (response.status === 409) {
              errorTitle.textContent = 'Duplicate RSVP';
            } else if (response.status === 400) {
              errorTitle.textContent = 'Please check your information';
            } else {
              errorTitle.textContent = 'Error';
            }
            errorText.textContent =
              result.error || 'Something went wrong. Please try again.';
          }
          errorMessage?.classList.remove('hidden');
          window.scrollTo({ top: 0, behavior: 'smooth' });
        }
      } catch (error) {
        console.error('Error submitting RSVP:', error);
        if (errorTitle && errorText) {
          errorTitle.textContent = 'Connection Error';
          errorText.textContent =
            'Failed to connect to the server. Please check your internet connection and try again.';
        }
        errorMessage?.classList.remove('hidden');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      } finally {
        // Re-enable button
        submitButton.disabled = false;
        submitButton.textContent = 'Submit RSVP';
      }
    });
  </script>
</BaseLayout>
