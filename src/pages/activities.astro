---
import BaseLayout from '../layouts/BaseLayout.astro';
import ImageHeroActivities from '../components/ImageHeroActivities.astro';
import ActivityCard from '../components/ActivityCard.astro';
import { getApprovedAndScheduledActivities } from '../lib/db';

// Fetch all approved and scheduled activities
const db = Astro.locals.runtime.env.DB;
const activities = await getApprovedAndScheduledActivities(db);

// Get unique activity types for filter buttons and count activities per type
const activityTypes = [
  ...new Set(activities.map((a) => a.activity_type).filter(Boolean)),
];
const typeCounts: Record<string, number> = {};
activityTypes.forEach((type) => {
  typeCounts[type || ''] = activities.filter(
    (a) => a.activity_type === type
  ).length;
});

// Try to import hero image
let heroImage;
try {
  heroImage = await import('../images/community-social.jpg');
} catch {
  heroImage = undefined;
}
---

<BaseLayout
  title="Activities - TwinkyMeet"
  description="Browse all activities and events planned for TwinkyMeet"
>
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <ImageHeroActivities
      image={heroImage?.default}
      title="Activities"
      subtitle="Explore all the fun activities planned for the event"
    />

    <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      <!-- Activity Type Filter -->
      {
        activityTypes.length > 0 && (
          <div class="mb-6 rounded-lg bg-white p-4 shadow-sm">
            <div class="flex flex-wrap items-center gap-3">
              <span class="text-sm font-medium text-gray-700">
                Filter by type:
              </span>
              <button
                class="type-filter rounded-md px-4 py-2 text-sm font-medium text-white transition-colors"
                style="background-color: #0891b2;"
                data-type="all"
              >
                All
                <span class="bg-opacity-30 ml-1.5 rounded-full bg-white px-2 py-0.5 text-xs">
                  {activities.length}
                </span>
              </button>
              {activityTypes.map((type) => (
                <button
                  class="type-filter rounded-md border border-gray-300 px-4 py-2 text-sm capitalize transition-colors hover:bg-gray-50"
                  data-type={type}
                >
                  {type}
                  <span class="ml-1.5 rounded-full bg-gray-100 px-2 py-0.5 text-xs text-gray-700">
                    {typeCounts[type || '']}
                  </span>
                </button>
              ))}
            </div>
          </div>
        )
      }

      <!-- Activities Stats -->
      {
        activities.length > 0 && (
          <div class="mb-8 grid grid-cols-1 gap-4 md:grid-cols-3">
            <div
              class="hover-lift border-primary-500 rounded-lg border-l-4 bg-white p-6 text-center"
              style="box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.1);"
            >
              <div
                class="text-primary-600 mb-1 text-3xl font-bold"
                id="total-count"
              >
                {activities.length}
              </div>
              <div class="text-sm text-gray-600">Total Activities</div>
            </div>
            <div
              class="hover-lift border-accent-500 rounded-lg border-l-4 bg-white p-6 text-center"
              style="box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.1);"
            >
              <div class="text-accent-600 mb-1 text-3xl font-bold">
                {activities.filter((a) => a.status === 'scheduled').length}
              </div>
              <div class="text-sm text-gray-600">Scheduled</div>
            </div>
            <div
              class="hover-lift border-primary-500 rounded-lg border-l-4 bg-white p-6 text-center"
              style="box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.1);"
            >
              <div class="text-primary-600 mb-1 text-3xl font-bold">
                {activityTypes.length}
              </div>
              <div class="text-sm text-gray-600">Activity Types</div>
            </div>
          </div>
        )
      }

      <!-- Activities Grid -->
      {
        activities.length === 0 ? (
          <div class="rounded-lg bg-white p-12 text-center shadow-sm">
            <svg
              class="mx-auto mb-4 h-16 w-16 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5"
              />
            </svg>
            <h3 class="mb-2 text-lg font-semibold text-gray-900">
              No Activities Yet
            </h3>
            <p class="mb-6 text-gray-600">
              Activities are still being reviewed and approved. Have an idea?
              Submit your own activity proposal!
            </p>
            <a
              href="/submit-activity"
              class="hover-lift inline-block rounded-lg px-6 py-3 font-bold text-white shadow-lg transition-all hover:shadow-xl"
              style="background-color: #fb923c;"
            >
              Propose an Activity
            </a>
          </div>
        ) : (
          <div>
            <div
              id="activities-grid"
              class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3"
            >
              {activities.map((activity) => (
                <div
                  class="activity-item"
                  data-type={activity.activity_type || ''}
                  data-status={activity.status}
                >
                  <ActivityCard activity={activity} />
                </div>
              ))}
            </div>

            <div
              id="no-results"
              class="hidden rounded-lg bg-white p-12 text-center shadow-sm"
            >
              <svg
                class="mx-auto mb-4 h-16 w-16 text-gray-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                />
              </svg>
              <h3 class="mb-2 text-lg font-semibold text-gray-900">
                No Activities Found
              </h3>
              <p class="mb-4 text-gray-600">
                No activities match the selected type. Try selecting a different
                category.
              </p>
              <button
                id="reset-filter"
                class="hover-lift rounded-lg px-6 py-2 font-bold text-white shadow-lg transition-all"
                style="background-color: #0891b2;"
              >
                Show All Activities
              </button>
            </div>
          </div>
        )
      }

      <!-- CTA Section -->
      <div
        class="from-primary-600 to-primary-800 mt-12 rounded-lg bg-gradient-to-r p-8 text-center text-white shadow-lg"
      >
        <h2 class="mb-3 text-2xl font-bold md:text-3xl">
          Have an Activity Idea?
        </h2>
        <p class="text-opacity-90 mx-auto mb-6 max-w-2xl text-white">
          We encourage all attendees to propose activities they'd like to host
          or participate in. Whether it's a game, workshop, outdoor adventure,
          or social hangout â€“ we want to hear your ideas!
        </p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <a
            href="/submit-activity"
            class="bg-accent-500 hover:bg-accent-600 hover-lift inline-block rounded-lg px-8 py-3 font-bold text-white shadow-lg transition-all hover:shadow-xl"
          >
            Submit an Activity
          </a>
          <a
            href="/schedule"
            class="text-primary-700 hover:bg-primary-50 inline-block rounded-lg border-2 border-white bg-white px-8 py-3 font-bold transition-colors"
          >
            View Schedule
          </a>
        </div>
      </div>

      <!-- Activity Key -->
      {
        activities.length > 0 && (
          <div class="bg-primary-50 border-primary-600 mt-8 rounded-lg border-l-4 p-6">
            <h3 class="mb-4 text-lg font-semibold text-gray-900">
              Activity Status Key
            </h3>
            <div class="grid gap-4 text-sm md:grid-cols-2">
              <div class="flex items-center">
                <div class="bg-accent-500 mr-3 h-3 w-3 rounded-full" />
                <div>
                  <div class="font-medium text-gray-900">Scheduled</div>
                  <div class="text-gray-600">Time and location confirmed</div>
                </div>
              </div>
              <div class="flex items-center">
                <div class="mr-3 h-3 w-3 rounded-full bg-yellow-500" />
                <div>
                  <div class="font-medium text-gray-900">Time TBA</div>
                  <div class="text-gray-600">Approved but time not yet set</div>
                </div>
              </div>
            </div>
          </div>
        )
      }
    </div>
  </div>

  <script>
    // Filter state
    let selectedType = 'all';

    // Get elements
    const typeFilters = document.querySelectorAll('.type-filter');
    const activitiesGrid = document.getElementById('activities-grid');
    const noResults = document.getElementById('no-results');
    const resetButton = document.getElementById('reset-filter');
    const totalCountDisplay = document.getElementById('total-count');

    // Filter activities
    function filterActivities() {
      const activityItems = document.querySelectorAll('.activity-item');
      let visibleCount = 0;

      activityItems.forEach((item) => {
        const htmlItem = item as HTMLElement;
        const itemType = htmlItem.dataset.type || '';

        if (selectedType === 'all' || itemType === selectedType) {
          htmlItem.style.display = '';
          visibleCount++;
        } else {
          htmlItem.style.display = 'none';
        }
      });

      // Update total count display
      if (totalCountDisplay) {
        totalCountDisplay.textContent = visibleCount.toString();
      }

      // Show/hide no results message
      if (activitiesGrid && noResults) {
        if (visibleCount === 0) {
          activitiesGrid.style.display = 'none';
          noResults.classList.remove('hidden');
        } else {
          activitiesGrid.style.display = '';
          noResults.classList.add('hidden');
        }
      }
    }

    // Update button states
    function updateButtonStates() {
      typeFilters.forEach((btn) => {
        const htmlBtn = btn as HTMLElement;
        if (htmlBtn.dataset.type === selectedType) {
          htmlBtn.style.backgroundColor = '#0891b2';
          htmlBtn.style.color = 'white';
          htmlBtn.style.borderColor = '#0891b2';

          // Update badge styling for active button
          const badge = htmlBtn.querySelector('span');
          if (badge) {
            badge.classList.remove('bg-gray-100', 'text-gray-700');
            badge.classList.add('bg-white', 'bg-opacity-30', 'text-white');
            (badge as HTMLElement).style.color = 'white';
            (badge as HTMLElement).style.backgroundColor =
              'rgba(255, 255, 255, 0.3)';
          }
        } else {
          htmlBtn.style.backgroundColor = '';
          htmlBtn.style.color = '';
          htmlBtn.style.borderColor = '';

          // Reset badge styling for inactive buttons
          const badge = htmlBtn.querySelector('span');
          if (badge) {
            badge.classList.remove('bg-white', 'bg-opacity-30', 'text-white');
            badge.classList.add('bg-gray-100', 'text-gray-700');
            (badge as HTMLElement).style.color = '';
            (badge as HTMLElement).style.backgroundColor = '';
          }
        }
      });
    }

    // Type filter handlers
    typeFilters.forEach((btn) => {
      btn.addEventListener('click', () => {
        const htmlBtn = btn as HTMLElement;
        selectedType = htmlBtn.dataset.type || 'all';
        updateButtonStates();
        filterActivities();
      });
    });

    // Reset filter
    resetButton?.addEventListener('click', () => {
      selectedType = 'all';
      updateButtonStates();
      filterActivities();
    });
  </script>
</BaseLayout>
