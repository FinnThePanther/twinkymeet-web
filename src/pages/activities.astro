---
import BaseLayout from '../layouts/BaseLayout.astro';
import ActivityCard from '../components/ActivityCard.astro';
import { getApprovedAndScheduledActivities } from '../lib/db';

// Fetch all approved and scheduled activities
const activities = getApprovedAndScheduledActivities();

// Get unique activity types for filter buttons
const activityTypes = [...new Set(activities.map(a => a.activity_type).filter(Boolean))];
---

<BaseLayout title="Activities - TwinkyMeet" description="Browse all activities and events planned for TwinkyMeet">
  <div class="bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <section class="bg-gradient-to-r from-indigo-600 to-indigo-800 text-white py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Activities</h1>
        <p class="text-xl text-indigo-100">Explore all the fun activities planned for the event</p>
      </div>
    </section>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

      <!-- Activity Type Filter Placeholders (non-functional for now - Phase 7) -->
      {activityTypes.length > 0 && (
        <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
          <div class="flex flex-wrap gap-3 items-center">
            <span class="text-sm font-medium text-gray-700">Filter by type:</span>
            <button class="px-4 py-2 text-sm bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">
              All
            </button>
            {activityTypes.map(type => (
              <button class="px-4 py-2 text-sm border border-gray-300 rounded-md hover:bg-gray-50 transition-colors capitalize">
                {type}
              </button>
            ))}
            <span class="text-xs text-gray-500 ml-auto">(Filters coming soon)</span>
          </div>
        </div>
      )}

      <!-- Activities Stats -->
      {activities.length > 0 && (
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
          <div class="bg-white rounded-lg shadow-sm p-6 text-center">
            <div class="text-3xl font-bold text-indigo-600 mb-1">{activities.length}</div>
            <div class="text-sm text-gray-600">Total Activities</div>
          </div>
          <div class="bg-white rounded-lg shadow-sm p-6 text-center">
            <div class="text-3xl font-bold text-indigo-600 mb-1">
              {activities.filter(a => a.status === 'scheduled').length}
            </div>
            <div class="text-sm text-gray-600">Scheduled</div>
          </div>
          <div class="bg-white rounded-lg shadow-sm p-6 text-center">
            <div class="text-3xl font-bold text-indigo-600 mb-1">{activityTypes.length}</div>
            <div class="text-sm text-gray-600">Activity Types</div>
          </div>
        </div>
      )}

      <!-- Activities Grid -->
      {activities.length === 0 ? (
        <!-- Empty State -->
        <div class="bg-white rounded-lg shadow-sm p-12 text-center">
          <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5" />
          </svg>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">No Activities Yet</h3>
          <p class="text-gray-600 mb-6">
            Activities are still being reviewed and approved. Have an idea? Submit your own activity proposal!
          </p>
          <a
            href="/submit-activity"
            class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-indigo-700 transition-colors"
          >
            Propose an Activity
          </a>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {activities.map(activity => (
            <ActivityCard activity={activity} />
          ))}
        </div>
      )}

      <!-- CTA Section -->
      <div class="mt-12 bg-gradient-to-r from-indigo-600 to-indigo-800 rounded-lg shadow-lg p-8 text-center text-white">
        <h2 class="text-2xl font-bold mb-3">Have an Activity Idea?</h2>
        <p class="text-indigo-100 mb-6 max-w-2xl mx-auto">
          We encourage all attendees to propose activities they'd like to host or participate in.
          Whether it's a game, workshop, outdoor adventure, or social hangout â€“ we want to hear your ideas!
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a
            href="/submit-activity"
            class="inline-block bg-white text-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
          >
            Submit an Activity
          </a>
          <a
            href="/schedule"
            class="inline-block bg-indigo-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-800 border-2 border-white transition-colors"
          >
            View Schedule
          </a>
        </div>
      </div>

      <!-- Activity Key -->
      {activities.length > 0 && (
        <div class="mt-8 bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Activity Status Key</h3>
          <div class="grid md:grid-cols-2 gap-4 text-sm">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
              <div>
                <div class="font-medium text-gray-900">Scheduled</div>
                <div class="text-gray-600">Time and location confirmed</div>
              </div>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-yellow-500 rounded-full mr-3"></div>
              <div>
                <div class="font-medium text-gray-900">Time TBA</div>
                <div class="text-gray-600">Approved but time not yet set</div>
              </div>
            </div>
          </div>
        </div>
      )}

    </div>
  </div>
</BaseLayout>
