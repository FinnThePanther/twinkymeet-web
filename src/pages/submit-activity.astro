---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSetting } from '../lib/db';

// Check if activity submissions are open
const submissionsOpen = getSetting('activity_submissions_open') === 'true';
---

<BaseLayout
  title="Submit Activity - TwinkyMeet"
  description="Propose an activity for TwinkyMeet"
>
  <div class="min-h-screen bg-gray-50 px-4 py-12 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl">
      {
        !submissionsOpen ? (
          <div class="rounded-lg bg-white p-8 text-center shadow-lg">
            <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-yellow-100">
              <svg
                class="h-8 w-8 text-yellow-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                />
              </svg>
            </div>

            <h1 class="mb-4 text-3xl font-bold text-gray-900">
              Activity Submissions are Currently Closed
            </h1>
            <p class="mb-6 text-gray-600">
              Activity submissions are not currently open. Check back soon!
            </p>

            <div class="mb-6 rounded-lg border border-indigo-200 bg-indigo-50 p-4 text-left">
              <p class="mb-2 text-sm text-gray-700">
                <strong class="text-gray-900">In the meantime:</strong>
              </p>
              <p class="text-sm text-gray-600">
                Have an activity idea? DM Finn the Panther on Telegram!
              </p>
            </div>

            <div class="space-y-3">
              <a
                href="/"
                class="block w-full rounded-lg bg-indigo-600 px-6 py-3 font-medium text-white transition-colors hover:bg-indigo-700"
              >
                Return Home
              </a>
              <a
                href="/activities"
                class="block w-full rounded-lg border-2 border-indigo-600 bg-white px-6 py-3 font-medium text-indigo-600 transition-colors hover:bg-indigo-50"
              >
                View Current Activities
              </a>
            </div>
          </div>
        ) : (
          <div class="rounded-lg bg-white p-8 shadow-lg">
            <div class="mb-8 text-center">
              <h1 class="mb-2 text-3xl font-bold text-gray-900">
                Submit an Activity
              </h1>
              <p class="text-gray-600">Propose an activity for TwinkyMeet</p>
            </div>

            {/* Success Message (hidden by default) */}
            <div
              id="success-message"
              class="mb-6 hidden rounded-lg border border-green-200 bg-green-50 p-6"
            >
              <div class="flex items-start">
                <svg
                  class="mr-3 h-6 w-6 flex-shrink-0 text-green-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <div>
                  <h3 class="mb-1 font-semibold text-green-900">Thanks!</h3>
                  <p class="mb-3 text-sm text-green-800">
                    We'll review your activity proposal and add it to the
                    schedule. You'll hear from us soon!
                  </p>
                  <div class="flex gap-3">
                    <button
                      id="submit-another"
                      class="text-sm text-green-700 underline hover:text-green-800"
                    >
                      Submit Another Activity
                    </button>
                    <a
                      href="/"
                      class="text-sm text-green-700 underline hover:text-green-800"
                    >
                      Return Home
                    </a>
                  </div>
                </div>
              </div>
            </div>

            {/* Error Message (hidden by default) */}
            <div
              id="error-message"
              class="mb-6 hidden rounded-lg border border-red-200 bg-red-50 p-4"
            >
              <div class="flex items-start">
                <svg
                  class="mt-0.5 mr-2 h-5 w-5 flex-shrink-0 text-red-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <div>
                  <h3 class="mb-1 font-semibold text-red-900" id="error-title">
                    Error
                  </h3>
                  <p class="text-sm text-red-800" id="error-text" />
                </div>
              </div>
            </div>

            {/* Form */}
            <form id="activity-form" class="space-y-6">
              {/* Activity Title */}
              <div>
                <label
                  for="title"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Activity Title <span class="text-red-600">*</span>
                </label>
                <input
                  type="text"
                  id="title"
                  name="title"
                  required
                  maxlength="255"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="e.g., Board Game Night"
                />
              </div>

              {/* Your Name */}
              <div>
                <label
                  for="host_name"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Your Name <span class="text-red-600">*</span>
                </label>
                <input
                  type="text"
                  id="host_name"
                  name="host_name"
                  required
                  maxlength="255"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="Your full name"
                />
              </div>

              {/* Your Email */}
              <div>
                <label
                  for="host_email"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Your Email <span class="text-red-600">*</span>
                </label>
                <input
                  type="email"
                  id="host_email"
                  name="host_email"
                  required
                  maxlength="255"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="your.email@example.com"
                />
              </div>

              {/* Description */}
              <div>
                <label
                  for="description"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Description <span class="text-red-600">*</span>
                </label>
                <textarea
                  id="description"
                  name="description"
                  required
                  rows="4"
                  maxlength="2000"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="Provide details about what you'll be doing..."
                />
                <p class="mt-1 text-xs text-gray-500">
                  Describe the activity, what participants will do, and any
                  special details
                </p>
              </div>

              {/* Duration */}
              <div>
                <label
                  for="duration"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Duration <span class="text-red-600">*</span>
                </label>
                <select
                  id="duration"
                  name="duration"
                  required
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                >
                  <option value="">Select duration...</option>
                  <option value="30">30 minutes</option>
                  <option value="60">1 hour</option>
                  <option value="120">2 hours</option>
                  <option value="180">3 hours</option>
                  <option value="240">4+ hours</option>
                </select>
              </div>

              {/* Activity Type */}
              <div>
                <label
                  for="activity_type"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Activity Type <span class="text-red-600">*</span>
                </label>
                <select
                  id="activity_type"
                  name="activity_type"
                  required
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                >
                  <option value="">Select type...</option>
                  <option value="Gaming">Gaming</option>
                  <option value="Outdoor">Outdoor</option>
                  <option value="Creative">Creative</option>
                  <option value="Social">Social</option>
                  <option value="18+">18+</option>
                  <option value="Other">Other</option>
                </select>
              </div>

              {/* Equipment Needed */}
              <div>
                <label
                  for="equipment_needed"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Equipment Needed (Optional)
                </label>
                <textarea
                  id="equipment_needed"
                  name="equipment_needed"
                  rows="2"
                  maxlength="1000"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="What materials or equipment will you need?"
                />
              </div>

              {/* Capacity */}
              <div>
                <label
                  for="capacity"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Maximum Participants (Optional)
                </label>
                <input
                  type="number"
                  id="capacity"
                  name="capacity"
                  min="1"
                  max="999"
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                  placeholder="e.g., 8"
                />
                <p class="mt-1 text-xs text-gray-500">
                  Leave blank if there's no limit
                </p>
              </div>

              {/* Time Preference */}
              <div>
                <label
                  for="time_preference"
                  class="mb-1 block text-sm font-medium text-gray-700"
                >
                  Time Preference <span class="text-red-600">*</span>
                </label>
                <select
                  id="time_preference"
                  name="time_preference"
                  required
                  class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
                >
                  <option value="">Select preference...</option>
                  <option value="Morning">Morning</option>
                  <option value="Afternoon">Afternoon</option>
                  <option value="Evening">Evening</option>
                  <option value="Late Night">Late Night</option>
                  <option value="No Preference">No Preference</option>
                </select>
                <p class="mt-1 text-xs text-gray-500">
                  When would this activity work best?
                </p>
              </div>

              {/* Submit Button */}
              <div>
                <button
                  type="submit"
                  id="submit-button"
                  class="w-full rounded-lg bg-indigo-600 px-6 py-3 font-semibold text-white transition-colors hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-none disabled:cursor-not-allowed disabled:bg-gray-400"
                >
                  Submit Activity
                </button>
                <p class="mt-2 text-center text-xs text-gray-500">
                  <span class="text-red-600">*</span> Required fields
                </p>
              </div>
            </form>
          </div>
        )
      }
    </div>
  </div>

  <script>
    const form = document.getElementById('activity-form') as HTMLFormElement;
    const submitButton = document.getElementById(
      'submit-button'
    ) as HTMLButtonElement;
    const submitAnotherButton = document.getElementById('submit-another');
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');
    const errorTitle = document.getElementById('error-title');
    const errorText = document.getElementById('error-text');

    // Submit another activity button
    submitAnotherButton?.addEventListener('click', () => {
      successMessage?.classList.add('hidden');
      form.reset();
      form.style.display = 'block';
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Disable button and show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Submitting...';

      // Hide previous messages
      successMessage?.classList.add('hidden');
      errorMessage?.classList.add('hidden');

      // Collect form data
      const formData = new FormData(form);
      const data = {
        title: formData.get('title'),
        host_name: formData.get('host_name'),
        host_email: formData.get('host_email'),
        description: formData.get('description'),
        duration: parseInt(formData.get('duration') as string),
        activity_type: formData.get('activity_type'),
        equipment_needed: formData.get('equipment_needed'),
        capacity: formData.get('capacity')
          ? parseInt(formData.get('capacity') as string)
          : null,
        time_preference: formData.get('time_preference'),
      };

      try {
        const response = await fetch('/api/activity', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        const result = await response.json();

        if (response.ok) {
          // Success
          successMessage?.classList.remove('hidden');
          form.style.display = 'none';
          window.scrollTo({ top: 0, behavior: 'smooth' });
        } else {
          // Error
          if (errorTitle && errorText) {
            if (response.status === 400) {
              errorTitle.textContent = 'Please check your submission';
            } else {
              errorTitle.textContent = 'Error';
            }

            // If there are field-specific errors, show them
            if (result.details) {
              const errorList = Object.values(result.details).join('. ');
              errorText.textContent = errorList;
            } else {
              errorText.textContent =
                result.error || 'Something went wrong. Please try again.';
            }
          }
          errorMessage?.classList.remove('hidden');
          window.scrollTo({ top: 0, behavior: 'smooth' });
        }
      } catch (error) {
        console.error('Error submitting activity:', error);
        if (errorTitle && errorText) {
          errorTitle.textContent = 'Connection Error';
          errorText.textContent =
            'Failed to connect to the server. Please check your internet connection and try again.';
        }
        errorMessage?.classList.remove('hidden');
        window.scrollTo({ top: 0, behavior: 'smooth' });
      } finally {
        // Re-enable button
        submitButton.disabled = false;
        submitButton.textContent = 'Submit Activity';
      }
    });
  </script>
</BaseLayout>
