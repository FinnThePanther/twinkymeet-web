---
import { parseSessionCookie, verifySessionToken } from '../../lib/auth';
import '../../styles/global.css';

// Check if already logged in
const sessionCookie = Astro.cookies.get('session')?.value;
const sessionSecret = process.env.SESSION_SECRET || '';
const isAuthenticated =
  sessionCookie && sessionSecret && verifySessionToken(sessionCookie, sessionSecret);

// If already authenticated, redirect to admin dashboard
if (isAuthenticated) {
  return Astro.redirect('/admin');
}

export const prerender = false;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - TwinkyMeet</title>
  </head>
  <body class="flex min-h-screen items-center justify-center bg-gray-50 px-4">
    <div class="w-full max-w-md">
      <!-- Logo/Branding -->
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-4xl font-bold text-indigo-600">TwinkyMeet</h1>
        <p class="text-gray-600">Admin Login</p>
      </div>

      <!-- Login Form Card -->
      <div class="rounded-lg bg-white p-8 shadow-lg">
        <!-- Error Message (hidden by default) -->
        <div
          id="error-message"
          class="mb-6 hidden rounded-lg border border-red-200 bg-red-50 p-4"
        >
          <div class="flex items-start">
            <svg
              class="mt-0.5 mr-2 h-5 w-5 flex-shrink-0 text-red-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="mb-1 font-semibold text-red-900" id="error-title">
                Error
              </h3>
              <p class="text-sm text-red-800" id="error-text"></p>
            </div>
          </div>
        </div>

        <!-- Login Form -->
        <form id="login-form" class="space-y-6">
          <!-- Password Field -->
          <div>
            <label
              for="password"
              class="mb-1 block text-sm font-medium text-gray-700"
            >
              Admin Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              autocomplete="current-password"
              class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500"
              placeholder="Enter admin password"
              autofocus
            />
          </div>

          <!-- Submit Button -->
          <div>
            <button
              type="submit"
              id="submit-button"
              class="w-full rounded-lg bg-indigo-600 px-6 py-3 font-semibold text-white transition-colors hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-none disabled:cursor-not-allowed disabled:bg-gray-400"
            >
              Sign In
            </button>
          </div>
        </form>

        <!-- Back to Home Link -->
        <div class="mt-6 text-center">
          <a
            href="/"
            class="text-sm text-indigo-600 underline hover:text-indigo-700"
          >
            Back to Home
          </a>
        </div>
      </div>
    </div>

    <script>
      const form = document.getElementById('login-form') as HTMLFormElement;
      const submitButton = document.getElementById(
        'submit-button'
      ) as HTMLButtonElement;
      const errorMessage = document.getElementById('error-message');
      const errorTitle = document.getElementById('error-title');
      const errorText = document.getElementById('error-text');
      const passwordInput = document.getElementById(
        'password'
      ) as HTMLInputElement;

      form?.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Disable button and show loading state
        submitButton.disabled = true;
        submitButton.textContent = 'Signing in...';

        // Hide previous error messages
        errorMessage?.classList.add('hidden');

        // Get password
        const password = passwordInput.value;

        try {
          const response = await fetch('/api/admin/auth', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ password }),
          });

          const result = await response.json();

          if (response.ok) {
            // Success - redirect to admin dashboard
            window.location.href = '/admin';
          } else {
            // Error
            if (errorTitle && errorText) {
              if (response.status === 429) {
                errorTitle.textContent = 'Too Many Attempts';
                errorText.textContent =
                  result.error ||
                  'You have been temporarily locked out due to too many failed login attempts. Please try again in 15 minutes.';
              } else if (response.status === 401) {
                errorTitle.textContent = 'Invalid Password';
                errorText.textContent =
                  result.error ||
                  'The password you entered is incorrect. Please try again.';
              } else {
                errorTitle.textContent = 'Error';
                errorText.textContent =
                  result.error || 'An error occurred. Please try again.';
              }
            }
            errorMessage?.classList.remove('hidden');

            // Clear password field on error
            passwordInput.value = '';
            passwordInput.focus();
          }
        } catch (error) {
          console.error('Error during login:', error);
          if (errorTitle && errorText) {
            errorTitle.textContent = 'Connection Error';
            errorText.textContent =
              'Failed to connect to the server. Please check your internet connection and try again.';
          }
          errorMessage?.classList.remove('hidden');
        } finally {
          // Re-enable button
          submitButton.disabled = false;
          submitButton.textContent = 'Sign In';
        }
      });
    </script>
  </body>
</html>
