---
const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t border-gray-200 mt-auto">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <!-- Copyright -->
      <div class="text-sm text-gray-600">
        &copy; {currentYear} TwinkyMeet. All rights reserved.
      </div>

      <!-- Contact -->
      <div class="text-sm text-gray-600">
        Questions? Contact us at <a href="mailto:info@twinkymeet.com" class="text-accent-600 hover:text-accent-700 font-semibold underline">info@twinkymeet.com</a>
      </div>

      <!-- Admin Link -->
      <div class="text-sm">
        <a href="/admin" class="text-gray-500 hover:text-primary-600 transition-colors">
          Admin
        </a>
      </div>
    </div>
  </div>
</footer>
