---
import type { Activity } from '../lib/db';
import { Image } from 'astro:assets';

interface Props {
  activity: Activity;
  image?: ImageMetadata;
}

const { activity, image } = Astro.props;

// Format time to display
const formatTime = (datetime?: string) => {
  if (!datetime) return 'TBA';
  return new Date(datetime).toLocaleTimeString('en-US', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true,
  });
};

// Use teal for all badges
const getBadgeColor = () => 'bg-primary-100 text-primary-800';
---

<div
  class="border-primary-500 rounded-r-lg border-l-4 bg-white p-4 shadow-sm transition-shadow hover:shadow-md"
>
  <!-- Optional Thumbnail -->
  {
    image && (
      <div class="float-right mb-2 ml-4 h-20 w-20 flex-shrink-0 overflow-hidden rounded">
        <Image
          src={image}
          alt={activity.title}
          class="h-full w-full object-cover object-top"
          widths={[80, 160]}
          sizes="80px"
        />
      </div>
    )
  }

  <div
    class="flex flex-col gap-3 md:flex-row md:items-start md:justify-between"
  >
    <!-- Time & Location -->
    <div class="flex-shrink-0 md:w-48">
      <div class="text-primary-600 text-lg font-semibold">
        {formatTime(activity.scheduled_start)} - {
          formatTime(activity.scheduled_end)
        }
      </div>
      {
        activity.location && (
          <div class="mt-1 flex items-center text-sm text-gray-600">
            <svg
              class="mr-1 h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"
              />
            </svg>
            {activity.location}
          </div>
        )
      }
    </div>

    <!-- Activity Details -->
    <div class="min-w-0 flex-1">
      <div class="mb-2 flex items-start justify-between gap-2">
        <h3 class="text-lg font-semibold text-gray-900">{activity.title}</h3>
        {
          activity.activity_type && (
            <span
              class={`rounded-full px-2 py-1 text-xs font-semibold whitespace-nowrap ${getBadgeColor()}`}
            >
              {activity.activity_type}
            </span>
          )
        }
      </div>

      {
        activity.description && (
          <p class="mb-2 line-clamp-2 text-sm text-gray-600">
            {activity.description}
          </p>
        )
      }

      <div class="flex items-center text-sm text-gray-500">
        <svg
          class="mr-1 h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
          ></path>
        </svg>
        <span>Hosted by {activity.host_name}</span>
        {
          activity.capacity && (
            <span class="ml-3">â€¢ Max {activity.capacity} participants</span>
          )
        }
      </div>
    </div>
  </div>
</div>
